{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceRoot}/cmake-build"
    },
    "tasks": [
        {
            "label": "make-build-dir",
            "type": "shell",
            "command": "mkdir",
            "args": [
                "${workspaceFolder}/cmake-build"
            ]
        },
        {
            "label" : "cmake-generate",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-H${workspaceFolder}",
                "-B${workspaceFolder}/cmake-build",
                "-DBUILD_UNIT_TESTS=1"
            ]
        },
        {
            "label": "cmake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/cmake-build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}